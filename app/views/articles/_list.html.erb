<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>タイトル</th>
      <th colspan="3"></th>
      <th>本文</th>
    </tr>
  </thead>
  <tbody>
    <% articles.each do |article| %>
    <tr>
      <td><%= article.user.name %></td>
      <td><%= link_to article_path(article.id) do %>
            <%= article.title %>
          <% end %>
      </td>
      <td><%= article.start_time.strftime("%Y-%m-%d %H:%M") %></td>
      <td><%= article.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>


