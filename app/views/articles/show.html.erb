<h1>投稿詳細</h1>

<h4>名前</h4>
<%= @article.user.name %>
<h4>タイトル</h4>
<%= @article.title %>
<h4>画像</h4>
<%= attachment_image_tag @article, :image %>
<h4>本文</h4>
<%= @article.body %>
<h4>投稿日時</h4>
<%= @article.created_at.strftime('%Y/%m/%d') %>

<% if @article.user == current_user %>
  <%= link_to "編集", edit_article_path(@article) %>
  <%= link_to "削除", article_path(@article), method: :delete, data: { confirm: '本当に削除しますか？' }  %>
<% end %>