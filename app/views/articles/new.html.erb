<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3 mt-5">
      <%= render 'articles/genre_search', genres: @genres %>
    </div>

    <div class="col-md-8 offset-md-1 mt-5">
      <h2><i class="fas fa-edit"></i>新規投稿</h2>
      <div class="col-10 new-form">
        <%= render 'layouts/error_messages', obj: @article %>
        <%= notice %>
        <%= form_with model: @article, local:true do |f| %>
        <div class="row">
          <div class="col-md">
            <form>
              <div class="form-group">
                <label><i class="fas fa-hand-point-right"></i>タイトル</label>
                <%= f.text_field :title, class: "form-control" %>
              </div>
              <div class="form-group">
                <label><i class="fas fa-hand-point-right"></i>画像</label>
                <p><%= f.attachment_field :image %></p>
              </div>
              <div class="form-group">
                <label><i class="fas fa-hand-point-right"></i>本文</label>
                <%= f.text_area :body, class: "form-control" %>
              </div>
              <div class="form-group">
                <label><i class="fas fa-hand-point-right"></i>ジャンル選択</label>
                <p><%= f.collection_select(:genre_id, @genres, :id, :name) %></p>
              </div>
              <div class="form-group">
                <label><i class="fas fa-hand-point-right"></i>公開・非公開設定</label>
                <p><%= f.select :status,[["公開", "公開"],["非公開", "非公開"]] %></p>
              </div>
              <%= f.submit '投稿', class: "btn btn-outline-success btn-lg btn-block mt-4 mb-4" %>
        <% end %>
            </form>
      </div>
    </div>
