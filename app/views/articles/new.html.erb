<h1>新規投稿</h1>

<%= form_with model: @article, local:true do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>画像</h4>
  <%= f.attachment_field :image %>
  <h4>本文</h4>
  <%= f.text_area :body %>
  <h4>ジャンル選択</h4>
  <%= f.collection_select(:genre_id, @genres, :id, :name) %>

  <%= f.submit '投稿' %>
<% end %>