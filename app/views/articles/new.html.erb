<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3 mt-5">
      <%= render 'articles/genre_search', genres: @genres %>
    </div>

    <div class="col-md-8 offset-md-1 mt-5">
      <h2><i class="fas fa-edit"></i>新規投稿</h2>
      <div class="col-10 new-form">
        <%= render 'layouts/error_messages', obj: @article %>
        <%= notice %>
        <%= form_with model: @article, local:true do |f| %>
        <div class="row">
          <div class="col-md">
            <form>
              <div class="form-group">
                <label>タイトル</label>
                <%= f.text_field :title, class: "form-control" %>
              </div>
              <div class="form-group">
                <label>画像</label>
                  <%= f.attachment_field :image, class: "form-control-file" %>
              </div>
              <div class="form-group">
                <label>本文</label>
                <%= f.text_area :body, class: "form-control" %>
              </div>
              <div class="form-group">
                <label>ジャンル選択</label>
                <%= f.collection_select(:genre_id, @genres, :id, :name) %>
              </div>
              <div class="form-group">
                <label>公開・非公開設定</label>
                <%= f.select :status,[["公開", "公開"],["非公開", "非公開"]] %>
              </div>
              <%= f.submit '投稿', class:  "btn btn-success" %>
        <% end %>
            </form>
      </div>
    </div>






















      <h2>投稿一覧</h2>
      <table class="table">
        <thead>
          <tr>
            <th>名前</th>
            <th>ジャンル</th>
            <th>タイトル</th>
            <th>本文</th>
          </tr>
        </thead>
        <tbody>
          <% @articles.each do |article| %>
            <tr>
              <td><%= article.user.name %></td>
              <td><%= article.genre.name %></td>
              <td><%= link_to article_path(article.id) do %>
                    <%= article.title %>
                  <% end %>
              </td>
              <td><%= article.body %></td>
              <td><%= article.status %></td>
              <td class="favorite-btn_<%= article.id %>"><%= render 'favorites/favorites', article: article %></td>
              <td><%= link_to  "#{article.article_comments.count}コメント", article_path(article) %></td>
              <td>
                <% if current_user != article.user %>
                  <% if article.user.followed_by?(current_user) %>
                    <p><%=link_to "フォロー済み", user_relationships_path(article.user.id), method: :delete %></p>
                  <% else %>
                    <p><%=link_to "フォローする", user_relationships_path(article.user.id), method: :post %></p>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @articles %>
    </div>
  </div>
</div>

