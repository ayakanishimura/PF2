<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto mt-5">
      <h2><i class="fas fa-user-edit"></i>プロフィール編集</h2>
      <%= form_with model:@user, local:true do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control name" %>
        <%= f.label :introduction %>
        <%= f.text_area :introduction, class: "form-control introduction" %><br>
        <input type="submit" name="commit" value="Update User" class="btn btn-success" data-disable-with="Update User">
      <% end %>
    </div>
  </div>
</div>









