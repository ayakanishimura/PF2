<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto mt-5">
      <h2>プロフィール編集</h2>
      <%= form_with model:@user, local:true do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control name" %>
        <%= f.label :introduction %>
        <%= f.text_area :introduction, class: "form-control introduction" %><br>
        <%= f.submit "変更する" %>
      <% end %>
    </div>
  </div>
</div>









