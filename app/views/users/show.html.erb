<div class="container px-5 px-sm-0">
	<div class="row">
		<div class="col-md-5 mt-5">
			<h2><i class="fas fa-calendar-day"></i>カレンダー</h2>
      <%= month_calendar events: @user.articles do |date, articles| %>
			  <%= date.day %>
			  <% articles.each do |article| %>
			    <div>
			      <%= link_to article.title, article_path(article) %>
			    </div>
			  <% end %>
			<% end %>
 		</div>
 		<div class="col-md-5 offset-md-1 mt-5">
 			<h2><i class="fas fa-house-user"></i>マイページ</h2>
 			<h4>登録情報</h4>
 			<table class="table">
 				<tbody>
 					<tr>
 						<th></th>
 						<th></th>
 					</tr>
 					<tr>
 						<td>名前:<%= @user.name %></td>
 					</tr>
 					<tr>
 						<td>紹介文：<%= @user.introduction %></td>
 					</tr>
 				</tbody>
 			</table>
 			<p>
 				<%= link_to "投稿一覧", myindex_user_path, class: "btn btn-outline-info" %>
 			</p>
 			<p>
 				<%= link_to "投稿する", new_article_path, class: "btn btn-outline-info" %>
 			</p>
 			<p>
 			<% if @user.id == current_user.id %>
			  <%= link_to "プロフィール編集", edit_user_path(@user), class: "btn btn-outline-info" %>
			<% end %>
 			</p>
 			<p>
 				<%= link_to "フォロー一覧", follows_user_path(current_user), class: "btn btn-outline-info" %>
 			</p>
 			<p>
 				<%= link_to "フォロワー一覧", followers_user_path(current_user), class: "btn btn-outline-info" %>
 			</p>
		</div>
 	</div>
</div>





