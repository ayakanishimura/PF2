<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-10 offset-md-1 mt-5">
      <h2><i class="fas fa-users"></i>フォロワー一覧</h2>
      <table class="table">
        <thead>
          <tr>
            <th>名前</th>
            <th>紹介文</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= link_to user.name, user_path(user.id) %></td>
              <td><%= user.introduction %></td>
              <td><%= link_to "プロフィール", user_path(user), class: "btn btn-outline-info" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
